
@model SV18T1021246.DomainModel.Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}



<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/employee/delete/@Model.EmployeeID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Họ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.LastName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FirstName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.BirthDate</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Photo:</label>
                <div class="col-sm-10">
                    <img class="img img-bordered" height="150px" width="150px" src="@Model.Photo"/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">ghi chú:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Notes</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (SV18T1021246.BusinessLayer.CommonDataService.InUsedEmployee(Model.EmployeeID))
                    {
                        <p class="text-danger">Không được xóa nhân viên này!</p> }
                    else{
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-remove"></i> Đồng ý xóa
                        </button>}
                    <a class="btn btn-warning" href="~/employee">
                        <i class="fa fa-ban"></i> Bỏ qua
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">

    </div>

</div>