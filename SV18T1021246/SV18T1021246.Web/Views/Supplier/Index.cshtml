
@model SV18T1021246.Web.Models.PaginationSearchInput
@{ ViewBag.Title = "Nhà cung cấp"; }

<!--Dể đổi 1 class nhấn ctrl + R + R-->
<!-- Default box -->
<div class="box" style="">
    <form id="searchInput" action="~/supplier/search">
        <div class="input-group">

            @Html.HiddenFor(m => m.PageSize)

            <input type="text" name="searchValue"
                   class="form-control"
                   placeholder="Nhập tên hoặc địa chỉ nhà cung cấp cần tìm.."
                   autofocus value="@Model.SearchValue">

            <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat btn-info">
                    <i class="fa fa-search"></i>
                </button>
                <a href="~/supplier/create" class="btn btn-flat btn-primary" style="margin-left:10px">
                    <i class="fa fa-plus"></i>Bổ sung
                </a>
            </span>
        </div>
    </form>
    <div id="searchResult">


    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            doSearch(@Model.Page);
            $("#searchInput").submit(function (e) {
                e.preventDefault();
                doSearch(1);
                return false;
            });
        });

        
    </script>
}